.search-side
  .search-side_child
    %p 条件で絞り込む
    .search_wap
      = search_form_for @search, url: search_users_path do |f|
        = f.text_field :nickname_or_title_or_profile_or_cando_cont , placeholder: "何かお探しですか？", class: 'input'
        = button_tag type: 'submit', class: 'search__button' do
          .icon_wap
            %i.fas.fa-search
  .search-side_child
    %p 並び順
    .select_wrap
      %select.search-side_child_select.form-control  
        %option 
        %option 実績順
        %option 新着順
        %option フォロワー多い順
        %option フォロワー少ない順
  .search-side_child
    %p カテゴリ
    %select.search-side_child_select.form-control 
      %option 
      %option a
      %option b
  .search-side_child
    %p メディア
    %select.search-side_child_select.form-control 
      %option 
      %option Youtube
      %option Twitter
      %option instagram
  .search-side_child
    %p フォロワー数
    %select.search-side_child_select.form-control 
      %option 
      %option ~1000人
      %option ~5000人
      %option ~10000人
      %option ~50000人
      %option ~10万人
      %option ~50万人
      %option ~100万人
  .search-side_child
    %p 料金
    %select.search-side_child_select.form-control 
      %option 
      %option ~3000円
      %option ~5000円
      %option ~8000円
      %option ~10000円
      %option ~12000円
      %option ~12000円
      %option ~30000円
  .search-side_child
    %p 評価
    %select.search-side_child_select.form-control 
      %option 
      %option ★
      %option ★★
      %option ★★★
      %option ★★★★
      %option ★★★★★