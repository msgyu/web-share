.user
  .row
    .user_icon.col-2
      = image_tag "member_photo_noimage_thumb.png"
    .user_info.col-8
      .user_info_name
        = host.nickname
      .user_info_title
        = host.title
      .user_info_score
        = "評価 ★★★★"
      .user_info_score
        = "#{host.selling_products.minimum(:price)}円"
      = link_to "", user_path(host), class: "user_info_link"

    .user_btn.col-2
      = link_to "", class: "btn" do
        %i.far.fa-user
        %p フォローする

      = link_to "", class: "btn active" do
        %i.far.fa-comments
        %p 相談してみる