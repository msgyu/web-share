.login-container
  .login-main
    .no-account
      アカウントをお持ちでない方はこちら
      = link_to '新規会員登録', registration_users_path, class:'btn-new about__registered'
    .login-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .login-form__group
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メールアドレス', class: 'input-default-login'
          - if resource.errors.include?(:email)
              %p.error_messages
                = "#{resource.errors.full_messages_for(:email).first}"
        .login-form__group
          = f.password_field :password, autocomplete: "current-password", placeholder: 'パスワード', class: 'input-default-login'
          - if resource.errors.include?(:password)
              %p.error_messages
                = "#{resource.errors.full_messages_for(:password).first}"
        .login-form__group
          = f.submit "ログイン", class:"btn-default-login"
